# GLPI Docker Compose Environment Variables

# Database Configuration
MYSQL_ROOT_PASSWORD=change_this_root_password
MYSQL_DATABASE=glpi_db
MYSQL_USER=glpi_user
MYSQL_PASSWORD=glpi_password

# GLPI Configuration
GLPI_DB_HOST=mariadb
GLPI_DB_USER=glpi_user
GLPI_DB_PASSWORD=glpi_password
GLPI_DB_NAME=glpi_db

# Email Configuration
mailname=yourdomain.com
smtp_user=glpi@yourdomain.com
smtp_password=your_email_password

# Webhook Configuration
GLPI_API_TOKEN=your_glpi_api_token_here
WAZUH_API_URL=http://your-wazuh-server:55000
WAZUH_API_USER=wazuh_user
WAZUH_API_PASSWORD=wazuh_password

# Port Configuration
GLPI_PORT=8080